<div style="margin: 3rem">
<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#id</th>
      <th scope="col">Subject</th>
      <th scope="col">Text</th>
      <th scope="col">File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td scope="row"><%= report.id %></td>
        <td><%= report.subject %></td>
        <td><%= report.text %></td>
        <td><%= report.file %></td>

        <td><%= link_to 'Show', report, class: "btn btn-light" %></td>
        <%if can? :manage, :report %>
          <td><%= link_to 'Edit', edit_report_path(report), class: "btn btn-light" %></td>
          <td><%= link_to 'Delete', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
      <%end%>
         </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-grid gap-2">
  <%= link_to 'New Report', new_report_path, class: "btn btn-outline-dark btn-lg btn-block"%>
</div>
</div>