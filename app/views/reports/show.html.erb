<div style="margin: 3rem">

  <div style="margin: 3rem">
    <p><h3><strong>Report #<%=@report.id%></strong></h3>

    <span>
       <%= link_to 'Edit', edit_report_path(@report), class: "btn btn-outline-dark align-content-center float-end"%>
      <%= link_to 'Back', reports_path, class: "btn btn-outline-dark align-content-center float-end", style: "margin-right: 5px"%>
    </span>
  </div>

  <p>
  <strong>Subject:</strong>
  <%= @report.subject %>
</p>

<p>
  <strong>Text:</strong>
  <%= @report.text %>
</p>

<p>
  <strong>File:</strong>
  <%= @report.file %>
</p>

</div>