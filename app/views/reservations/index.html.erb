<div style="margin: 3rem">

  <h1>Reservations</h1>

  <table class="table table-dark table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">Entry date</th>
      <th> Departure date</th>
      <th> Price</th>
      <th> Transfer receipt</th>
      <th> Reserve expiration</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @reservations.each do |reservation| %>
      <tr id="tabla1">
        <td scope="row"><%= reservation.entry_date %></td>
        <td><%= reservation.departure_date %></td>
        <td><%= reservation.price %></td>
        <td><%= reservation.transfer_receipt %></td>
        <td><%= reservation.reserve_expiration %></td>
        <td><%= link_to 'Show', reservation, class: "btn btn-light" %></td>
        <%if can? :manage, :reservation or reservation.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-light" %></td>
          <td><%= link_to 'Delete', reservation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
        <%end%>
         </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <div class="d-grid gap-2">
    <%= link_to 'New Reservation', new_reservation_path, class: "btn btn-outline-dark btn-lg btn-block"%>
  </div>

</div>
