<div style="margin: 3rem">


<h1>Review Lodgings</h1>

  <table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Text</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_lodgings.each do |review_lodging| %>
      <tr id="tabla1">
        <td scope="row"><%= review_lodging.text %></td>
        <td><%= review_lodging.rating %></td>
        <td><%= link_to 'Show', review_lodging, class: "btn btn-light" %></td>

        <%if can? :manage, :review_lodging %>
          <td><%= link_to 'Edit', edit_review_lodging_path(review_lodging), class: "btn btn-light" %></td>
          <td><%= link_to 'Delete', review_lodging, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
        <%end%>
         </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div class="d-grid gap-2">
    <%= link_to 'New Review Lodging', new_review_lodging_path, class: "btn btn-outline-dark btn-lg btn-block"%>
  </div>

</div>