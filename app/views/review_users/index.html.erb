<div style="margin: 3rem">

<h1>Review Users</h1>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Text</th>
      <th>Rating</th>
      <th>Is a guest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_users.each do |review_user| %>
      <tr id="tabla1">
        <td scope="row"><%= review_user.text %></td>
        <td><%= review_user.rating %></td>
        <td><%= review_user.is_a_guest %></td>
        <td><%= link_to 'Show', review_user, class: "btn btn-light" %></td>

        <%if can? :manage, :review_user %>
          <td><%= link_to 'Edit', edit_review_user_path(review_user), class: "btn btn-light" %></td>
          <td><%= link_to 'Delete', review_user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div class="d-grid gap-2">
    <%= link_to 'New Review User', new_review_user_path, class: "btn btn-outline-dark btn-lg btn-block"%>
  </div>


</div>