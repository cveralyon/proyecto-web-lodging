<div style="margin: 3rem">

  <div style="margin: 3rem">
    <p><h3><strong>Review that User:<%=@review_user.made_id%> made to User:<%=@review_user.received_id%></strong></h3>

    <span>
       <%= link_to 'Edit', edit_review_user_path(@review_user), class: "btn btn-outline-dark align-content-center float-end"%>
      <%= link_to 'Back', review_users_path, class: "btn btn-outline-dark align-content-center float-end", style: "margin-right: 5px"%>
    </span>
  </div>

  <p>
  <strong>Text:</strong>
  <%= @review_user.text %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @review_user.rating %>
</p>

<p>
  <strong>Is a guest:</strong>
  <%= @review_user.is_a_guest %>
</p>

</div>
