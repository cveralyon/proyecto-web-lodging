<div style="margin: 3rem">

  <div style="margin: 3rem">
    <p><h1><strong> Lodgings Results </strong></h1>

    <span>
      <button type="button" class="btn btn-outline-dark align-content-center float-end" > <%= link_to 'Back', new_search_path %></button>
    </span>
  </div>

  <table class="table table-dark table-striped table-hover" style="margin-top: 2rem">
    <thead>
    <tr>
      <th scope="col">#id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @search.search_lodgings.each do |lodging| %>
      <tr id="tabla1">
        <td scope="row"><%= lodging.id %></td>
        <td><%= lodging.name %></td>
        <td><%= lodging.description %></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Show', lodging%></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Edit', edit_lodging_path(lodging) %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Destroy', lodging, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
