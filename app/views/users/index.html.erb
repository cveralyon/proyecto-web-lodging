<div style="margin: 3rem">

  <h1>Users</h1>

  <%= form_tag users_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <%end %> <br />

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @users.each do |user| %>
          <div class="col">
            <div class="card shadow-sm">
              <div class="card-body">
                <a class="card-title"><%= user.email %></a>
                <p class="card-text" style="height: 30px" ><%=user.first_name %> <%=user.last_name %>  Rut: <%=user.rut %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'View', user, class: "btn btn-sm btn-outline-secondary" %>
                    <%if can? :manage, :user %>
                      <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
                      <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>

                    <%end%>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <% end %>
      </div>

    </div>
  </div>


  <div class="d-grid gap-2">
    <%= link_to 'New User', new_user_path, class: "btn btn-outline-dark btn-lg btn-block"%>
  </div>



</div>
